<resources>
    <!-- Base application theme. -->
    <style name="Theme.Snoozz" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/torquise_light</item>
        <item name="colorPrimaryVariant">@color/darkOrchid</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">@color/darkOrchid</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Fullscreen" parent="Theme.Snoozz">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Widget.App.DurationPicker.Button.AddTime" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="icon">@drawable/ic_action_add</item>
    </style>

    <style name="TextAppearance.App.CountdownTextView" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TextAppearance.App.CountdownTextView.Disabled">
        <item name="android:textColor">@color/material_on_background_disabled</item>
    </style>


    <style name="NeumorphismImageSmall">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_21sdp</item>
    </style>
    <style name="NeumorphismImageNormal">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_27sdp</item>
    </style>
    <style name="NeumorphismImageLarge">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_32sdp</item>
    </style>
    <style name="NeumorphismCardImage">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_115sdp</item>
    </style>
    <style name="NeumorphismTimerShape">
        <item name="neumorph_cornerSizeBottomLeft">@dimen/_115sdp</item>
        <item name="neumorph_cornerSizeTopLeft">@dimen/_115sdp</item>
    </style>
    <style name="NeumorphismTimerOffShape">
        <item name="neumorph_cornerSizeBottomRight">@dimen/_115sdp</item>
        <item name="neumorph_cornerSizeTopRight">@dimen/_115sdp</item>
    </style>

    <style name="RoundedAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corners</item>
    </style>

    <style name="RoundedAlertDialogItem" parent="@android:style/TextAppearance">
        <!-- Customize the text color for the list items -->
        <item name="android:textColor">@color/teal_700</item>
    </style>


    <style name="NeumorphismTimerView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
        <item name="shapeAppearance">@style/CustomShapeAppearanceOverlay</item>
    </style>

    <style name="CustomShapeAppearanceOverlay">
        <item name="cornerFamilyTopRight">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="android:shape">@drawable/timer_start_shape</item>
    </style>

    <style name="NeumorphismImageOther">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_8sdp</item>
    </style>

    <style name="NeumorphismCreateBottom">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_40sdp</item>
    </style>

    <style name="NeumorphismMusicBar">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_12sdp</item>
    </style>

    <style name="NeumorphismImageSongItem">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_18sdp</item>
    </style>
    <style name="NeumorphismMenu">
        <item name="neumorph_cornerFamily">rounded</item>
        <item name="neumorph_cornerSize">@dimen/_40sdp</item>
    </style>

</resources>